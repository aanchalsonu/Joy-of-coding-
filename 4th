#include <stdio.h>

int main()
 {
     int a;
    float b;
    char c;
    double d;
    printf("Size of integer type is %ld byte ", sizeof(a));
    printf("\nSize of float type is %ld byte", sizeof(b));
    printf("\nSize of char type is %ld byte", sizeof(c));
    printf("\nSize of double type is %ld byte ", sizeof(d));
    return 0;
    
}
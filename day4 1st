//Program to take details and print the details in same order a swell as reverse order 

#include <stdio.h>

int main()
{
    int a[6],i=0,j=0,k=0;
    float b[6];
    char c[6];
    printf("Enter the daily wages of Mr INT from Monday to Saturday ");
    for(i=0;i<6;i++) scanf("%d",&a[i]);
    printf("Enter the daily wages of Mr FLOAT from Monday to Saturday ");
    for(j=0;j<6;j++) scanf("%f",&b[j]);
    printf("Enter the week days without space ");
    for(k=0;k<6;k++) scanf("%c",&c[k]);
    //printing the details 
    printf("Mr INT wages are ");
    for(i=0;i<6;i++){
        printf("%d ",a[i]);
    }
    printf("\nMr FLOAT wages are ");
    for(j=0;j<6;j++){
        printf("%f ",b[j]);
    }
    printf("\nMr CHAR details are ");
    for(k=0;k<6;k++){
        printf("%c",c[k]);
    }
    //printing in reverse order 
    printf("\nThe reverse order is \n");
    printf("Mr INT ");
    for(i=5;i>=0;i--){
        printf("%d ",a[i]);
    }
    printf("\nMr FLOAT ");
    for(j=5;j>=0;j--){
        printf("%f ",b[j]);
    }
    printf("\nMr CHAR ");
    for(k=6;k>=0;k--){
        printf("%c",c[k]);
    }
    return 0;
}
